<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable -->
<!-- TemplateBeginEditable name="head" -->
<!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
<link href="article.css" rel="stylesheet" type="text/css" />

{* 包含脚本文件 *}
{insert_scripts files='common.js,transport.js'}
</head>
<body>
<div id="site-nav"> 
  <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem --> 
  <div class="blank"></div>
  <!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
  <div class="w main">
    <div class="right-extra">
      <h2>{$cat_name}</h2>
      <ul class="article_list">
        <!-- {foreach from=$artciles_list item=article name=article} -->
         <li class="clearfix {if $smarty.foreach.article.iteration mod 2 eq 0}even{/if}">
            <h3><a href="{$article.url}" title="{$article.title|escape:html}" target="_blank">{$article.short_title}</a></h3>
            <div class="pic"><a href="{$article.url}"  target="_blank" title="{$article.title|escape:html}"><img src="{$article.title_pic|default:images/no_picture.gif}" width="180" height="140" alt="{$article.title|escape:html}"/></a></div>
            <div class="desc">
               <p>{$article.description|truncate:90}</p>
               
               {if $article.goods_list}
               <div class="relativ_goods">
                
                <!--{foreach from=$article.goods_list item=releated_goods_data name=releated_goods_data}--> 
				<div class="goods_item" {if $smarty.foreach.releated_goods_data.iteration eq 1}style="border-top:none;"{/if}>
				<div class="p-img"><a href="{$releated_goods_data.url}"><img width="100" height="100" alt="{$releated_goods_data.name}"  src="{$releated_goods_data.goods_thumb}"/></a></div>
				<div class="p-price">
                <strong> 
				<!-- {if $releated_goods_data.promote_price neq 0} -->
				  {$releated_goods_data.formated_promote_price}
				  <!-- {else} -->
				  {$releated_goods_data.shop_price}
				  <!-- {/if} -->
				  </strong>
                  
				  </div>
				</div>
				<!-- {/foreach} -->
               
               </div>
               {/if}
               <div style="clear:both"></div>
               <div class="viewMore"><a href="{$article.url}" title="{$article.title|escape:html}"  target="_blank">>>>></a></div>
            </div>
         </li>
         <!-- {/foreach} -->

     
        
      </ul>
      <div class="blank5"></div>
      <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem --> 
    </div>
    <div class="left-extra"> 
		<!-- #BeginLibraryItem "/library/article_category_tree.lbi" --><!-- #EndLibraryItem --> 
		<!-- TemplateBeginEditable name="左边广告区域" --> <!-- TemplateEndEditable --> 
    </div>
    <div style="height:0px; line-height:0px; clear:both;"></div>
  </div>
  <!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem --> 
  <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem --> 
</div>
</body>
<script type="text/javascript">
document.getElementById('cur_url').value = window.location.href;
</script>
</html>
